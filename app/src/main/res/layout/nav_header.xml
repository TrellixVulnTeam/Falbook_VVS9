<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@color/colorPrimary">

<com.joooonho.SelectableRoundedImageView
    android:layout_marginTop="10dp"
    android:layout_height="104dp"
    android:layout_width="104dp"
    android:layout_centerHorizontal="true"
    android:id="@+id/navProfilePhoto"
    android:src="@drawable/cat_profile"
    android:scaleType="centerCrop"
    app:sriv_left_top_corner_radius="16dip"
    app:sriv_right_top_corner_radius="0dip"
    app:sriv_left_bottom_corner_radius="48dip"
    app:sriv_right_bottom_corner_radius="16dip"
    app:sriv_border_width="2dip"
    app:sriv_border_color="@color/colorGonderButonBorder"
    app:sriv_oval="true" />

<LinearLayout
    android:layout_below="@+id/navProfilePhoto"
    android:layout_width = "match_parent"
    android:layout_height = "56dp"
    android:orientation = "vertical"
    android:paddingBottom = "2dp"
    android:paddingLeft = "15dp">

    <TextView
        android:id = "@+id/navKullaniciIsim"
        android:layout_width = "wrap_content"
        android:layout_height = "0dp"
        android:layout_weight = "1"
        android:fontFamily = "sans-serif-medium"
        android:text="Ä°sminiz"
        android:gravity = "bottom"
        android:textSize = "14sp">
    </TextView>

    <TextView
        android:id = "@+id/navKullaniciMail"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_weight = "1"
        android:fontFamily = "sans-serif"
        android:text="Mail adresiniz"
        android:gravity = "bottom"
        android:textSize = "14sp">
    </TextView>

    </LinearLayout>
</RelativeLayout>