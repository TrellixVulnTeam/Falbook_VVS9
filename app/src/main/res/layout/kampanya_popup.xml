<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="380dp"
    android:layout_gravity="center"
    android:background="@drawable/popupbg"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/txtpopupKapat"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:layout_margin="5dp"
        android:background="@drawable/beanbackgroundcircle"
        android:gravity="center"
        android:text="X"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/f_rsat"
            android:textAllCaps="true"
            android:textColor="#FBEFDF"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="128dp"
            android:layout_height="80dp"
            android:src="@drawable/ikon"
            android:layout_gravity="center"
            android:scaleType="fitCenter"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Bu ÖZEL indirimi kaçırma!"
            android:textColor="#FBEFDF"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:paddingLeft="72dp"
            android:text="1000 "
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@color/yello"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="9dp"
            android:text="Telve"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="#FBEFDF"
            android:textSize="20sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtpopupEskiFiyat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingEnd="3dp"
                android:paddingLeft="48dp"
                android:paddingRight="22dp"
                android:paddingStart="48dp"
                android:text="69 TL"
                android:textColor="#FBEFDF"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="19.99 TL"
                android:textColor="#FBEFDF"
                android:textSize="32sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnMagzayaGit"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/buttonstyle"
        android:text="SANA ÖZEL SAYFAYA GİT"
        android:textColor="@color/colorFalciIsmi" />

</LinearLayout>