<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardGelenFal"
    app:cardUseCompatPadding="true"
    android:layout_margin="20dp"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="6dp"
    app:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/cardKullaniciIsmi"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:textAllCaps="true"
            android:text="Kullanıcı İsmi"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"/>

        <ImageButton
            android:layout_width="14dp"
            android:layout_height="18dp"
            android:layout_margin="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/trash_icon" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:id="@+id/cardKahveFotografi"
            android:background="@drawable/kahvefalifoto"
            android:layout_below="@+id/cardKullaniciIsmi" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:id="@+id/cardTarihIcon"
            android:background="@drawable/tarih_icon"
            android:layout_below="@id/cardKahveFotografi"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cardTarihText"
            android:text="GG/AA/YYYY"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_below="@id/cardKahveFotografi"
            android:layout_toRightOf="@+id/cardTarihIcon"
            android:layout_toEndOf="@+id/cardTarihIcon"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cardFalYorumu"
            android:layout_below="@id/cardTarihIcon"
            android:text="Falınız Yorumlanıyor"
            android:textSize="10sp"
            android:textColor="@android:color/black"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>