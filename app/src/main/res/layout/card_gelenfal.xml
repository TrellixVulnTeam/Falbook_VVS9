<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardGelenFal"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:layout_margin="20dp"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="6dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/cardKullaniciIsmi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:text="Kullanıcı İsmi"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <ImageButton
            android:layout_width="14dp"
            android:layout_height="18dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="12dp"
            android:adjustViewBounds="true"
            android:background="@drawable/trash_icon"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/cardBtnCop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:background="@color/float_transparent"
            android:scaleType="fitCenter" />


        <com.elyeproj.loaderviewlibrary.LoaderImageView
            android:id="@+id/cardKahveFotografi"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_below="@+id/cardKullaniciIsmi"
            android:background="@color/colorWebdeOku" />

        <ImageView
            android:id="@+id/cardTarihIcon"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_below="@id/cardKahveFotografi"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="4dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/tarih_icon" />

        <TextView
            android:id="@+id/cardTarihText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardKahveFotografi"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/cardTarihIcon"
            android:layout_toRightOf="@+id/cardTarihIcon"
            android:text="GG/AA/YYYY"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/cardFalYorumu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardTarihIcon"
                android:layout_marginEnd="4dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="4dp"
                android:layout_marginStart="20dp"
                android:maxLines="2"
                android:minLines="1"
                android:text="Falınız Yorumlanıyor"
                android:textColor="@android:color/black"
                android:textSize="10sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>