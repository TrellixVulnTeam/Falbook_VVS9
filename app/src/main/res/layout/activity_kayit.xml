<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.falbookv4.helloteam.falbook.activities.KayitActivity">

    <ImageView
        android:id="@+id/kayitFalbookLogo"
        android:layout_width="184dp"
        android:layout_height="184dp"
        app:srcCompat="@drawable/logofalbook"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.13999999"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/kayitTxtIsim"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/buton_border"
        android:ems="10"
        android:hint="Ad Soyad"
        android:inputType="text"
        android:minHeight="38dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:textColor="#111"
        android:textColorHint="@color/colorTrash"
        android:textCursorDrawable="@null"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kayitFalbookLogo"
        app:layout_constraintHorizontal_bias="0.0" />


    <EditText
        android:id="@+id/kayitTxtSifre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/buton_border"
        android:ems="10"
        android:hint="Åžifre"
        android:inputType="textVisiblePassword"
        android:minHeight="38dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:textColor="#111"
        android:textColorHint="@color/colorTrash"
        android:textCursorDrawable="@null"
        app:layout_constraintTop_toBottomOf="@+id/kayitTxtIsim"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/kayitTxtMail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/buton_border"
        android:ems="10"
        android:hint="E-Mail"
        android:inputType="textEmailAddress"
        android:minHeight="38dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:textColor="#111"
        android:textColorHint="@color/colorTrash"
        android:textCursorDrawable="@null"
        app:layout_constraintTop_toBottomOf="@+id/kayitTxtSifre"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/kayitBtnKaydol"
        android:text="KAYIT OL"
        android:textStyle="bold"
        android:background="@drawable/gonderbuton_border"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/kayitTxtMail"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>
