<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/genelToolbar"
    android:background="@color/colorPrimaryDark"
    android:minHeight="?attr/actionBarSize"
    android:layout_gravity="bottom|center"
    app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
    app:elevation="0dp"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/constoolbar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/anasayfaButon"
            android:minHeight="32dp"
            android:minWidth="32dp"
            android:background="@mipmap/ic_home_white_24dp"
            tools:layout_constraintTop_creator="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/guideline4"
            app:layout_constraintBaseline_toBaselineOf="@+id/gelenfalButon" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gelenfalButon"
            android:minHeight="32dp"
            android:minWidth="32dp"
            android:background="@mipmap/ic_local_cafe_white_24dp"
            tools:layout_constraintTop_creator="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/guideline5" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="567dp"
            android:id="@+id/guideline4"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="81dp"
            app:layout_constraintGuide_begin="81dp" />

        <android.support.constraint.Guideline
            android:layout_width="0dp"
            android:layout_height="567dp"
            android:id="@+id/guideline5"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="304dp"
            app:layout_constraintGuide_end="80dp" />


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.Toolbar>