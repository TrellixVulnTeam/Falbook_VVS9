<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.falbookv4.helloteam.falbook">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".classes.Falbook"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity
            android:name=".activities.AnasayfaActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ToolbarActivity"
            android:label="@string/title_activity_toolbar"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.KafeActivity"
            android:label="@string/title_activity_kafe"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".falcisec.FalcilarActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GelenfallarActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.FaldetayActivity"
            android:parentActivityName=".GelenfallarActivity" />
        <activity android:name=".activities.KayitActivity" />
        <activity android:name=".activities.GirisActivity" />
        <activity
            android:name=".activities.ProfilActivity"
            android:parentActivityName=".activities.AnasayfaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SifredegistirActivity"
            android:label="@string/sifre_degistir"
            android:parentActivityName=".activities.AnasayfaActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".activities.FalbookhakkindaActivity"
            android:parentActivityName=".activities.AnasayfaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SSSActivity"
            android:parentActivityName=".activities.AnasayfaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.IletisimActivity"
            android:parentActivityName=".activities.AnasayfaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SatinalActivity"
            android:parentActivityName=".activities.AnasayfaActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.MisafiruyeActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.DilekActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".falcisec.FalcilarActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>