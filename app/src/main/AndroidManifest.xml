            android:parentActivityName=".activities.GirisActivity" />
        <activity
            android:name=".activities.GirisActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ProfilActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.AnasayfaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SifredegistirActivity"
            android:label="@string/sifre_degistir"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.AnasayfaActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".activities.FalbookhakkindaActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.AnasayfaActivity"
            android:screenOrientation="portrait" />
